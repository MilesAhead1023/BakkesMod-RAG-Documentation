# Auto-detect text files and normalize line endings
* text=auto

# Python files - use LF
*.py text eol=lf

# Markdown files - use LF
*.md text eol=lf

# Text files - use LF
*.txt text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts - use LF
*.sh text eol=lf

# Windows batch files - use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.pkl binary
*.faiss binary
*.db binary
*.sqlite binary
